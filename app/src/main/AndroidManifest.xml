<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.x4twister.rememberit">

    <application
        android:name=".RememberApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher2"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher2_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".RememberListActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".editor.TopicActivity"
            android:parentActivityName=".RememberListActivity"/>
        <activity android:name=".editor.InfoActivity"/>
        <activity android:name=".game.GameActivity"/>
    </application>

</manifest>